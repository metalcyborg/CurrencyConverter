<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spinner_height"
    android:orientation="vertical">

    <TextView
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spinner_text_margin"
        android:layout_marginStart="@dimen/spinner_text_margin"
        android:text="AUD"
        android:textColor="@color/colorSpinnerText"
        android:textSize="@dimen/spinner_text_size"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spinner_text_margin"
        android:layout_marginStart="@dimen/spinner_text_margin"
        android:text="Австралийский доллар"
        android:textColor="@color/colorSpinnerText"
        android:textSize="@dimen/spinner_text_size"/>

</LinearLayout>